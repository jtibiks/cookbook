<h1>Listing recipes</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Date</th>
    <th>Instructions</th>
  </tr>

<% for recipe in @recipes %>
  <tr>
    <td><%=h recipe.title %></td>
    <td><%=h recipe.description %></td>
    <td><%=h recipe.date %></td>
    <td><%=h recipe.instructions %></td>
    <td><%= link_to 'Show', recipe %></td>
    <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
    <td><%= link_to 'Destroy', recipe, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New recipe', new_recipe_path %>
<h3>Enter keyword</h3>
<form action ="recipes/search" method="post">
<input name = "key" type="input" />
<input value="Send" type="submit"/>
</form>
